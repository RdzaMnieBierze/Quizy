<Window x:Class="Quizy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizy"
        xmlns:viewModel="clr-namespace:Quizy.MVVM.Viewmodel" xmlns:view="clr-namespace:Quizy.MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:CreateViewModel}">
            <view:CreateQuizView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:SolveViewModel}">
            <view:SolveQuizView/>
        </DataTemplate>
    </Window.Resources>

    <Border CornerRadius="20" BorderThickness="2" BorderBrush="Black">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                <GradientStop Color="#FFDD33" Offset="0.0"/>
                <GradientStop Color="#BD82ED" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Quizy"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="20,0,0,0"
                       FontSize="40"
                       FontFamily="/Resource/#Poppins"/>

            <Border Grid.Column="1"  Grid.Row="0" HorizontalAlignment="Right"
                    VerticalAlignment="Top" Margin="15"
                    Width="30" Height="30" CornerRadius="15"
                    Background="#EC4E20" BorderBrush="Black"
                    BorderThickness="1.5">
                <Button Content="X" BorderThickness="0" Foreground="Black" Background="Transparent" Command="{Binding exit}" FontFamily="/Resource/#Poppins" FontWeight="Bold"/>
            </Border>

            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                <RadioButton Content="Rozpocznij" Style="{StaticResource MenuButtonTheme}" Command="{Binding NavigateSolve}"/>
                <RadioButton Content="Stwórz" Style="{StaticResource MenuButtonTheme}" Command="{Binding NavigateCreate}"/>
                <RadioButton Content="Wczytaj" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Edytuj" Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>

            <ContentControl Content="{Binding CurrentViewModel}" Grid.Column="1" Grid.Row="1"/>


        </Grid>
    </Border>
</Window>
